<control:RailwayBase 
    x:Class="TrainDispatcherSimulator.Controls.RailwayPrivola"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
    xmlns:control="clr-namespace:TrainDispatcherSimulator.Controls"
    mc:Ignorable="d" 
    Height="90" 
    Width="90">
    
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="30"/>
            <RowDefinition Height="30"/>
            <RowDefinition Height="30"/>
        </Grid.RowDefinitions>
        
        
        <TextBlock x:Name="timerTextBlock" FontSize="18" Foreground="Red" HorizontalAlignment="Center" VerticalAlignment="Center"/>
        <Border Grid.Row="1" Background="{Binding RailwayBrush}"/>

        <Polygon Grid.Row="2" Fill="{StaticResource RailwayBaseBrush}" VerticalAlignment="Center" HorizontalAlignment="Center">
            <Polygon.Points>
                <Point X="0" Y="0" />
                <Point X="40" Y="10" />
                <Point X="0" Y="20" />
            </Polygon.Points>
        </Polygon>

    </Grid>
</control:RailwayBase>
