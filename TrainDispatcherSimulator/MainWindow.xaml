<Window x:Class="TrainDispatcherSimulator.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:control="clr-namespace:TrainDispatcherSimulator.Controls"
        Title="MainWindow" Height="500" Width="525"
        Background="Black">
    <Grid>
        <Grid x:Name="railwayGrid">
            <Grid.RowDefinitions>
                <RowDefinition Height="1*"/>
                <RowDefinition Height="90"/>
                <RowDefinition Height="90"/>
                <RowDefinition Height="90"/>
                <RowDefinition Height="1*"/>
            </Grid.RowDefinitions>
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="1*"/>
                <ColumnDefinition Width="90"/>
                <ColumnDefinition Width="90"/>
                <ColumnDefinition Width="90"/>
                <ColumnDefinition Width="1*"/>
            </Grid.ColumnDefinitions>
        
            <control:RailwaySection Grid.Row="1" Grid.Column="1" Grid.ColumnSpan="2"  LeftSemaphore="False"/>
            <control:RailwaySection x:Name="section2" Grid.Row="3" Grid.Column="1" Grid.ColumnSpan="3"  LeftSemaphore="False"/>

        </Grid>
        
        <Grid>
            
        </Grid>
        
        

    </Grid>
</Window>
