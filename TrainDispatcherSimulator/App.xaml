<Application x:Class="TrainDispatcherSimulator.App"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             StartupUri="MainWindow.xaml"
             xmlns:my="clr-namespace:System;assembly=mscorlib">
    <Application.Resources>
        <my:Double x:Key="RailwayHeight">30</my:Double>
        <my:Double x:Key="BlockDimension">90</my:Double>
        
        <SolidColorBrush x:Key="RailwayBaseBrush" Color="LightGray"/>
        <SolidColorBrush x:Key="RailwayMouseOverBrush" Color="WhiteSmoke"/>
    </Application.Resources>
</Application>
